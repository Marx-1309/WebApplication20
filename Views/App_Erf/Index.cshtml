@model IEnumerable<WebApplication20.Models.App_Erf>

@{
    ViewBag.Title = "Index";
}
<style>
    div.btn-group {
        position: static;
        bottom: 10px;
        left: 0px;
        right: 0px;
        width: 100px;
    }
</style>
<div class="content-wrapper">

    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header">
                        <h3><span class="badge badge-primary badge-pill">ERF LIST<span class="mdi mdi-account-multiple-outline"></span></span></h3>
                        <div class="dropdown">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">
                                <span class="mdi mdi-export-variant"></span> Export

                            </a>

                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" <%= @Html.ActionLink(" Excel", "Reports", new { ReportType = "Excel" }) </a>
                                <a class="dropdown-item" <%= @Html.ActionLink(" Pdf", "Reports", new { ReportType = "PDF" }) </a>
                                <a class="dropdown-item" <%= @Html.ActionLink(" Word", "Reports", new { ReportType = "Word" }) </a>
                                <a class="dropdown-item" <%= @Html.ActionLink(" Image", "Reports", new { ReportType = "Image" }) </a>
                            </div>
                        </div>
                        <a class="mb-1 btn btn-outline-primary" href="/App_Erf/Create">Create New</a>
                    </div>
                
                    <div class="card-body">


                        <table id="productsTable" class="table table-hover table-product" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th><label>ERF NUMBER</label></th>
                                    <th><label>ERF SIZE</label></th>
                                    <th><label>ERF AREA</label></th>
                                    <th><label>PLOT TYPE</label></th>
                                    <th><label>ERF TOWNSHIP</label></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="py-0">
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ErfNumber)
                                        </td>
                                        <td> @Html.DisplayFor(modelItem => item.ErfSize)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Sys_ErfArea.ErfArea)</td>
                                        <td> @Html.DisplayFor(modelItem => item.Sys_PlotType.PlotType)</td>
                                        <td> @Html.DisplayFor(modelItem => item.Sys_ErfTownship.ErfTownship)</td>


                                        <td>
                                            <div class="dropdown">
                                                <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                                                   aria-haspopup="true" aria-expanded="false">
                                                </a>

                                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                                                    <a class="dropdown-item" href="/App_Erf/Details/@item.ErfNumberID">Details</a>
                                                    <a class="dropdown-item" href="/App_Erf/Edit/@item.ErfNumberID">Update</a>
                                                    <a class="dropdown-item deleteRecord" data-id="@item.ErfNumberID" href="javascript:void(0)">Delete</a>
                                                    @*<a class="dropdown-item deleteRecord" data-id="@item.ErfNumberID" href="javascript:void(0)">Delete</a>*@

                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $(".deleteRecord").on('click', function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    let app_Erf = $(this).attr('data-id');
                    $.ajax(
                        {
                            url: '/App_Erf/Delete',
                            type: 'POST',
                            data: { id: app_Erf },
                            success: function (response) {
                                if (response.status == true) {
                                    Swal.fire(
                                        'Deleted!',
                                        'Your record has been deleted.',
                                        'success'
                                    )

                                    setTimeout(() => {
                                        window.location.reload();
                                    }, 3000);
                                } else {
                                    alert(response.message);
                                    return;
                                }
                            },
                            error: function () {
                                alert('Please refresh your page, id is missing to delete the record.')
                            }
                        }
                    );
                }
            })
        });
    });




</script>


